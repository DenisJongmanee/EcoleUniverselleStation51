{% extends 'base.html.twig' %}

{% block title %}Hello InscriptionController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card border-0 shadow rounded-3 my-5">
					<div class="card-body p-4 p-sm-5">
						<h5 class="card-title text-center mb-5 fw-light fs-5">Inscription</h5>
						{{ form_start(form)}}
						<div class="form-floating mb-3">
							{{ form_row(form.email, {'label': 'Adresse mail', 'attr': {'placeholder': 'Adresse mail'}})}}
						</div>
						<div class="form-floating mb-3">
							{{ form_row(form.password)}}
						</div>
						<div class="form-floating mb-3">
							{{ form_row(form.confirm_password)}}
						</div>
                        <div class="d-grid">
						    <button type="submit" class="btn btn-primary">Inscription</button>
                            </div>
						{{ form_end(form)}}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
