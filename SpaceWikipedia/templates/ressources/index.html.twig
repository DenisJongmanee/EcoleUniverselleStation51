{% extends 'base.html.twig' %}

{% block title %}Recherche sur {{search|upper}}{% endblock %}

{% block body %}
<form>
<div class="w-25 p-3">
<div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Entrez un mot clé" name="search" id="search" value="{{search}}" required />
        <div class="input-group-append">
            <input class="btn btn-outline-primary" type="submit" value="Rechercher"/>
        </div>
    </div>
</div>
</form>

{% if articles|length == 0 %}
    <div class="message">Aucun article qui répond au critère "{{search}}".</div>
{% else %}
    <div class="message">Nous avons trouvé {{articles|length}} article(s)</div>    
{% endif %}

<div>
    <ul>
    {% for article in articles %}
        <li><a href="{{ path('itemRessource', { 'id': article.id }) }}">{{article.titre}}</a></li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
